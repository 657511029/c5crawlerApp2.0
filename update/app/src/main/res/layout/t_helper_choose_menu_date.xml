<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/t_helper_choose_menu_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期区间"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:gravity="center"
        android:paddingVertical="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最短查找时间跨度为一天"
        android:textColor="#C8C8C8"
        android:textSize="12dp"
        android:gravity="center"
        android:paddingVertical="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">
        <TextView
            android:id="@+id/t_helper_choose_menu_date_startTime"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#C8C8C8"
            android:background="@drawable/date_choose_shape"
            android:text="开始日期"
            android:layout_width="0.0dp"
            android:layout_height="35dp"/>
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#C8C8C8"
            android:text="——"
            android:layout_width="0.0dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/t_helper_choose_menu_date_endTime"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#C8C8C8"
            android:background="@drawable/date_choose_shape"
            android:text="结束日期"
            android:layout_width="0.0dp"
            android:layout_height="35dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/t_helper_choose_menu_date_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="清除"
        android:textColor="#4D77C3"
        android:textSize="12dp"
        android:gravity="center"
        android:background="@drawable/shape_clean"
        android:paddingVertical="5dp"
        android:paddingHorizontal="15dp"
        />
</LinearLayout>