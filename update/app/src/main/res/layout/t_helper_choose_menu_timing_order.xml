<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/t_helper_choose_menu_timing_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="令时选择"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:gravity="center"
        android:paddingVertical="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="13">
        <TextView
            android:id="@+id/t_helper_choose_menu_timing_order_summer"
            android:layout_weight="6"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#C8C8C8"
            android:background="@drawable/timing_order_choose_shape"
            android:text="夏令时"
            android:clickable="true"
            android:layout_width="0.0dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0.0dp"
            android:layout_height="35dp"/>
        <TextView
            android:id="@+id/t_helper_choose_menu_timing_order_winter"
            android:layout_weight="6"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#C8C8C8"
            android:clickable="true"
            android:background="@drawable/timing_order_choose_shape"
            android:text="冬令时"
            android:layout_width="0.0dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</LinearLayout>