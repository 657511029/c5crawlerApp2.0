<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/t_helper_choose_menu_min_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最小数量"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:gravity="center"
        android:paddingVertical="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">
        <EditText
            android:id="@+id/t_helper_choose_menu_min_number_count"
            android:layout_weight="3"
            android:textSize="12dp"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="#C8C8C8"
            android:gravity="left|bottom"
            android:hint="最小数量"
            android:theme="@style/MyEditText"
            android:layout_width="0.0dp"
            android:layout_height="60dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/t_helper_choose_menu_min_number_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="清除"
        android:textColor="#4D77C3"
        android:textSize="12dp"
        android:gravity="center"
        android:background="@drawable/shape_clean"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        />
</LinearLayout>