<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textSize="10dp"-->
<!--        android:textColor="#979797"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg">
            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="12dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_jewelry_desc"
                >
                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/t_helper_jewelry_abrasion"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="8dp"
                    android:maxLines="1"
                    android:maxEms="4"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/t_helper_jewelry_statTrak"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="8dp"
                    android:maxLines="1"
                    android:maxEms="15"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/t_helper_image"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/capoo"
                android:background="@drawable/shape_jewelry_image"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingStart="10dp"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">
            <TextView
                android:id="@+id/t_helper_jewelry_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_helper_jewelry_list_item_average"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_helper_jewelry_list_item_count"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>

                
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
       
    </LinearLayout>
    
</LinearLayout>