<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rank_item_image"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/item_bg"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/capoo" />

    <TextView
        android:id="@+id/rank_item_name"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:maxEms="10"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rank_item_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rank_item_price"
        android:layout_width="68dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:maxEms="13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rank_item_image"
        app:layout_constraintTop_toBottomOf="@+id/rank_item_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rank_item_count"
        android:layout_width="84dp"
        android:layout_height="25dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="8dp"
        android:maxEms="25"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rank_item_image"
        app:layout_constraintTop_toBottomOf="@+id/rank_item_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rank_item_addPrice"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="8dp"
        android:maxEms="12"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rank_item_image"
        app:layout_constraintTop_toBottomOf="@+id/rank_item_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rank_item_addProportion"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="8dp"
        android:maxEms="10"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@+id/rank_item_image"
        app:layout_constraintTop_toBottomOf="@+id/rank_item_name"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>