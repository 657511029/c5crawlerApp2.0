<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Update" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="android:dropDownListViewStyle">@style/XSpinnerStyle</item>

    </style>

    <style name="Theme.Update" parent="Base.Theme.Update" />

    <style name="XSpinnerStyle" parent="android:Widget.ListView.DropDown">
        <!-- 分隔线颜色 -->
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="spinner_style" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_raow_selector</item>
    </style>
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/back_icon_color</item>
        <item name="android:textColorSecondary">@color/back_icon_color</item>

        <item name="colorAccent">@color/blue_4875C6</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_C8C8C8</item>
        <item name="colorControlActivated">@color/blue_4875C6</item>
    </style>
    <!--colorControlNormal 为没有获取焦点时候下划线的颜色-->
    <!--colorControlActivated 为获取焦点时候光标与下划线的颜色-->

</resources>